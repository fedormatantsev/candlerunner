    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'candlerunner'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=candlerunner",
                    "--package=candlerunner",
                ],
                "filter": {
                    "name": "candlerunner",
                    "kind": "bin"
                }
            },
            "args": ["-c", "conf.yaml"],
            "cwd": "${workspaceFolder}"
        },
    ]
}